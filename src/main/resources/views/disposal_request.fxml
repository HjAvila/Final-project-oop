<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.collections.FXCollections?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<BorderPane xmlns:fx="http://javafx.com/fxml" fx:controller="com.example.finaoop.controllers.DisposalRequestController">

    <!-- Sidebar -->
    <left>
        <VBox spacing="10" prefWidth="220" style="-fx-background-color: #2C3E50; -fx-padding: 15;">
            <Label text="EcoWaste System" style="-fx-text-fill: white; -fx-font-size: 18; -fx-font-weight: bold;" />
            <Separator />

            <Button text="ðŸ  Home" styleClass="sidebar-button" onAction="#goToHome"/>
            <Button text="ðŸ“¦ Disposal Requests" styleClass="sidebar-button" onAction="#goToDisposalView"/>
            <Button text="ðŸ“ Request Form" styleClass="sidebar-button" onAction="#goToDisposalRequest"/>
            <Button text="ðŸšª Logout" styleClass="sidebar-button" onAction="#onLogout"/>
        </VBox>
    </left>

    <!-- Main Content -->
    <center>
        <VBox spacing="20" alignment="TOP_CENTER" style="-fx-padding: 30;">
            <Label text="Submit a Disposal Request"
                   style="-fx-font-size: 22; -fx-font-weight: bold; -fx-text-fill: #2C3E50;" />

            <GridPane hgap="15" vgap="15">
                <columnConstraints>
                    <ColumnConstraints halignment="RIGHT" minWidth="120" />
                    <ColumnConstraints halignment="LEFT" minWidth="250" />
                </columnConstraints>

                <Label text="Full Name:" GridPane.rowIndex="0" GridPane.columnIndex="0" />
                <TextField fx:id="nameField" promptText="Enter your name"
                           GridPane.rowIndex="0" GridPane.columnIndex="1" />

                <Label text="Address:" GridPane.rowIndex="1" GridPane.columnIndex="0" />
                <TextField fx:id="addressField" promptText="Enter your address"
                           GridPane.rowIndex="1" GridPane.columnIndex="1" />

                <Label text="Waste Type:" GridPane.rowIndex="2" GridPane.columnIndex="0" />
                <ComboBox fx:id="wasteTypeBox" promptText="Select type"
                          GridPane.rowIndex="2" GridPane.columnIndex="1">
                    <items>
                        <FXCollections fx:factory="observableArrayList">
                            <String fx:value="Plastic" />
                            <String fx:value="Metal" />
                            <String fx:value="Electronic" />
                            <String fx:value="Organic" />
                            <String fx:value="Other" />
                        </FXCollections>
                    </items>
                </ComboBox>

                <Label text="Quantity (kg):" GridPane.rowIndex="3" GridPane.columnIndex="0" />
                <TextField fx:id="quantityField" promptText="Enter weight in kilograms"
                           GridPane.rowIndex="3" GridPane.columnIndex="1" />

                <Label text="Pickup Date:" GridPane.rowIndex="4" GridPane.columnIndex="0" />
                <DatePicker fx:id="pickupDatePicker" GridPane.rowIndex="4" GridPane.columnIndex="1" />

                <Label text="Notes:" GridPane.rowIndex="5" GridPane.columnIndex="0" />
                <TextArea fx:id="notesArea" promptText="Additional details"
                          prefRowCount="3" GridPane.rowIndex="5" GridPane.columnIndex="1" />
            </GridPane>

            <Button text="Submit Request"
                    style="-fx-background-color: #27AE60; -fx-text-fill: white; -fx-font-size: 14; -fx-font-weight: bold;"
                    onAction="#handleSubmitRequest" />

            <Label fx:id="statusLabel"
                   style="-fx-text-fill: #2C3E50; -fx-font-size: 13;" />
        </VBox>
    </center>
</BorderPane>
