<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<StackPane xmlns:fx="http://javafx.com/fxml" fx:controller="com.example.finaoop.controllers.SignupController"
           stylesheets="@../styles/style.css">
    <VBox alignment="CENTER">
        <Pane minHeight="60"/>
        <VBox styleClass="center-card" spacing="10" alignment="CENTER">
            <Label text="Create Account" styleClass="card-title"/>
            <TextField fx:id="fullNameField" promptText="Full name" styleClass="input"/>
            <TextField fx:id="emailField" promptText="Email" styleClass="input"/>
            <PasswordField fx:id="passwordField" promptText="Password" styleClass="input"/>
            <PasswordField fx:id="confirmField" promptText="Confirm password" styleClass="input"/>
            <Label fx:id="msgLabel" styleClass="muted"/>
            <HBox spacing="10">
                <Button text="Create" onAction="#onCreateAccount" styleClass="primary-btn"/>
                <Button text="Back" onAction="#backToLogin" styleClass="secondary-btn"/>
            </HBox>
        </VBox>
        <Pane minHeight="60"/>
    </VBox>
</StackPane>
