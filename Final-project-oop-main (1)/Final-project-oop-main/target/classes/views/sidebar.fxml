<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>

<AnchorPane xmlns="http://javafx.com/javafx/21"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.example.finaoop.controllers.SidebarController"
            prefWidth="300" prefHeight="500">
    <VBox style="-fx-background-color: white;" spacing="18" alignment="TOP_LEFT" prefWidth="300" prefHeight="500">
        <Pane style="-fx-background-color: #1FA84B; -fx-pref-height:80;">
            <Label text="Waste Disposal Assistant" layoutX="12" layoutY="12" style="-fx-text-fill: white; -fx-font-size:14; -fx-font-weight:bold;"/>
        </Pane>

        <VBox spacing="8" style="-fx-padding: 0 0 0 18;">
            <Button text="Dashboard" onAction="#onDashboard"/>
            <Button text="Disposal Request" onAction="#onDisposalRequest"/>
            <Button text="Reports" onAction="#onReports"/>
            <Button text="Profile" onAction="#onProfile"/>
            <Button text="About" onAction="#onAbout"/>
            <Button text="Logout" onAction="#onLogout"/>
        </VBox>
    </VBox>
</AnchorPane>
