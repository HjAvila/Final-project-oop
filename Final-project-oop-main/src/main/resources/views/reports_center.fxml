<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?> <AnchorPane xmlns:fx="http://javafx.com/fxml"
                                                fx:controller="com.example.finaoop.controllers.ReportsController"
                                                stylesheets="@../styles/style.css"
                                                style="-fx-background-color: linear-gradient(to bottom right, #dff7e0, #f6fff1);">

    <ScrollPane fitToWidth="true" fitToHeight="true" AnchorPane.bottomAnchor="0"
                AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0" AnchorPane.topAnchor="0">

        <VBox spacing="25">
            <padding>
                <Insets top="30" right="30" bottom="30" left="30"/>
            </padding>

            <VBox spacing="6">
                <Label text="Reports" style="-fx-font-size: 22px; -fx-font-weight: bold; -fx-text-fill: #0f4a2c;"/>
                <Label text="A complete list of all disposal requests submitted."
                       style="-fx-text-fill: #3f5d45; -fx-font-size: 13px;"/>
            </VBox>

            <HBox spacing="20" VBox.vgrow="ALWAYS">
                <TableView fx:id="table" prefHeight="600" VBox.vgrow="ALWAYS" HBox.hgrow="ALWAYS">
                    <columns>
                        <TableColumn fx:id="colId" text="ID" prefWidth="100"/>
                        <TableColumn fx:id="colLocation" text="Location" prefWidth="250"/>
                        <TableColumn fx:id="colType" text="Waste Type" prefWidth="150"/>
                        <TableColumn fx:id="colStatus" text="Status" prefWidth="120"/>
                        <TableColumn fx:id="colDate" text="Date" prefWidth="150"/>
                    </columns>
                </TableView>

                <VBox spacing="12" prefWidth="320"
                      style="-fx-background-color: #e8f8e7; -fx-padding: 18; -fx-background-radius: 16;">
                    <Label text="Report Preview" style="-fx-font-size: 15px; -fx-font-weight: bold; -fx-text-fill: #0f4a2c;"/>
                    <ImageView fx:id="reportPhotoPreview" fitWidth="280" fitHeight="200" preserveRatio="true"
                               style="-fx-border-color: #9ed1a5; -fx-border-width: 1; -fx-border-radius: 12; -fx-background-radius: 12; -fx-background-color: white;"/>
                    <Label fx:id="reportStatusLabel" text="Select a report" style="-fx-font-weight: bold; -fx-text-fill: #1d7a3a;"/>
                    <Label fx:id="reportDetailsLabel" wrapText="true" style="-fx-text-fill: #3f5d45; -fx-font-size: 12px;"/>
                </VBox>
            </HBox>

        </VBox>
    </ScrollPane>
</AnchorPane>