<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.Region?>

<AnchorPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.example.finaoop.controllers.AdminDasboardController"
            stylesheets="@../styles/style.css"
            style="-fx-background-color: linear-gradient(to bottom right, #dff7e0, #f6fff1);">

    <VBox spacing="20" AnchorPane.topAnchor="0" AnchorPane.bottomAnchor="0"
          AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0">
        <padding>
            <Insets top="20" right="30" bottom="20" left="30"/>
        </padding>

        <HBox alignment="CENTER_LEFT" spacing="10">
            <Label text="Admin Dashboard" style="-fx-font-size: 24px; -fx-font-weight: bold;"/>
            <Region HBox.hgrow="ALWAYS"/>
            <Button text="Logout" onAction="#logout" styleClass="secondary-btn"/>
        </HBox>

        <HBox spacing="20" VBox.vgrow="ALWAYS">
            <!-- Main Table of All Reports -->
            <VBox spacing="10" HBox.hgrow="ALWAYS">
                <Label text="All Disposal Requests" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>
                <TableView fx:id="reportsTable" VBox.vgrow="ALWAYS">
                    <columns>
                        <TableColumn fx:id="colId" text="ID" prefWidth="80"/>
                        <TableColumn fx:id="colRequester" text="Requester" prefWidth="150"/>
                        <TableColumn fx:id="colLocation" text="Location" prefWidth="200"/>
                        <TableColumn fx:id="colType" text="Type" prefWidth="100"/>
                        <TableColumn fx:id="colStatus" text="Status" prefWidth="100"/>
                        <TableColumn fx:id="colDate" text="Date" prefWidth="120"/>
                    </columns>
                </TableView>
            </VBox>

            <!-- NEW: Admin Controls & Photo Preview -->
            <VBox spacing="20" prefWidth="350"
                  style="-fx-background-color: #ffffff; -fx-padding: 20; -fx-background-radius: 16; -fx-effect: dropshadow(gaussian, rgba(31,91,58,0.08), 8, 0.2, 0, 3);">
                <Label text="Request Details" style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #0f4a2c;"/>

                <Label fx:id="detailsLabel" text="Select a report from the table." wrapText="true"
                       style="-fx-font-size: 14px; -fx-text-fill: #3f5d45;"/>

                <Label text="Reported Photo:" style="-fx-font-weight: bold; -fx-text-fill: #0f4a2c;"/>
                <ImageView fx:id="photoPreview" fitHeight="200" fitWidth="310" preserveRatio="true"
                           style="-fx-background-color: #edf9ed; -fx-border-color: #9ed1a5; -fx-border-radius: 10; -fx-background-radius: 10;"/>

                <Label text="Update Status:" style="-fx-font-weight: bold; -fx-text-fill: #0f4a2c;"/>
                <ComboBox fx:id="statusComboBox" promptText="Select new status" prefWidth="310"/>
                <Button fx:id="updateButton" text="Update Report Status" onAction="#updateStatus"
                        styleClass="primary-btn" prefWidth="310"/>
                <Label fx:id="adminStatusLabel" text="" style="-fx-font-weight: bold;"/>
            </VBox>
        </HBox>
    </VBox>
</AnchorPane>